html {
  font-size: 10px;
}

body {
  font-family: 'Gotham Pro', serif;
  font-weight: 400;
  font-size: 1.6rem;
  color: #000;
  line-height: 1.37;
  position: relative;
}

button:focus,
input:focus,
textarea:focus,
select:focus,
input:invalid,
input:required {
  outline: none !important;
  box-shadow: none !important;
}