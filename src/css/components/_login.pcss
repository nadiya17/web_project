.login-user {
    width: 400px;
    background: #A9A9A9 	;
    margin: 40px auto;
    position: relative;
    padding: 10px;
    border-radius: 5px;
    box-shadow: 1px 1px 1px #555;

    .image {
        img {
            width: 150px;
            height: 150px;
            margin-left: 25%;
        }
    }
    form {
        #form-box {
            padding: 10px;
        }
        .inp {
            width: 100%;
            padding: 10px 10px 10px 0px;
            margin-bottom: 15px;
            border: none ;
            border-bottom: 1px solid #999;
            font-size: 16px;
            color: black;
            background: white ;

            &:focus {
                outline: none;
                color: rgb(44, 44, 44);
                font-weight: bolder ;
                border-bottom: 1px solid #009688;
            }
        }
        .sub-btn {
            width: 100%;
            padding: 10px;
            margin-top: 30px;
            border: none ;
            border-radius: 3px;
            font-weight: bold;
            font-size: 16px;
            color: #fff;
            background: rgb(61, 61, 61);
            cursor: pointer;
            &:focus {
                outline: none;
            }
            &:hover {
                background: rgb(44, 44, 44);
            }
        }
    }
   .icon {
       position: absolute;
       width: 30px;
       height: 30px;
       font-size: 25px;
       padding: 8px 8px 8px 0;
       color: orange;
      
   }
   .input-l {
       margin-left: 35px;
       input[type=text], input[type=email], input[type=password], input[type=checkbox] {
        padding-left: 15px;
    
    }
    #Th {
        margin-left: 10px;
    }
    label {
        color: white;
    }
   }
   

   @media (max-width: 720px) {
    .registration-user {
        width: 90%;
    }
   }
}